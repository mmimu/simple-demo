<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="30">
    <Properties>
        <!--<Property name="server_log_home">${sys:server_log_home}</Property>
        <Property name="server_name">${sys:server_name}</Property>-->
        <Property name="server_log_home">logs/</Property>
        <Property name="server_name">simple-springannotation</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:SSS} |-%-5level [%t] %M\(%c{0}.java:%L\) - %msg%n"/>
        </Console>

        <RollingFile name="RollingFileInfo" fileName="${server_log_home}/${server_name}.log"
                     filePattern="${server_log_home}/${server_name}.%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36}:%L [%t] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 GB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>

        <RollingFile name="ExposeRollingFileInfo" fileName="${server_log_home}/server_log/${server_name}.log"
                     filePattern="${server_log_home}/server_log/${server_name}-%d{yyyy-MM-dd-HH}.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT"/>
            <PatternLayout pattern="%d %-5p [%t] %c（%L）| %m%n"/>

            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 GB"/>
            </Policies>
            <DefaultRolloverStrategy max="48"/>
        </RollingFile>
        <RollingFile name="RollingFileError" fileName="${server_log_home}/${server_name}.err"
                     filePattern="${server_log_home}/${server_name}-%d{yyyy-MM-dd}.err">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36}:%L [%t] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <logger name="org.springframework" level="INFO"/>
        <logger name="serverLogger" level="INFO">
            <appender-ref ref="ExposeRollingFileInfo"/>
        </logger>

        <root level="all">
            <appender-ref ref="Console" />
            <appender-ref ref="RollingFileInfo"/>
            <appender-ref ref="RollingFileError"/>
        </root>
    </Loggers>
</Configuration>